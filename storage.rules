rules_version = '2';

// Firebase Storage Security Rules for Hopewell UMC
service firebase.storage {
  match /b/{bucket}/o {

    // Public images - anyone can read, only authenticated users can write
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Staff photos - public read, admin write only
    match /staff-photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null
                  && request.auth.token.admin == true;
    }

    // Carousel/slideshow images - public read, admin write
    match /carousel/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
                  && request.auth.token.admin == true;
    }

    // Ministry images - public read, admin write
    match /ministries/{ministryId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
                  && request.auth.token.admin == true;
    }

    // Event images - public read, authenticated write
    match /events/{eventId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User uploads (profile pics, etc) - authenticated only
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // PDFs and documents - public read, admin write
    match /documents/{docId} {
      allow read: if true;
      allow write: if request.auth != null
                  && request.auth.token.admin == true;
    }

    // Helper function for file validation
    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
             && request.resource.size < 10 * 1024 * 1024; // 10MB max
    }

    function isValidPDF() {
      return request.resource.contentType == 'application/pdf'
             && request.resource.size < 100 * 1024 * 1024; // 100MB max
    }
  }
}
